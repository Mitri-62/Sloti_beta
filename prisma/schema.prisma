generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  password      String
  name          String
  role          String      // "admin" ou "user"
  lastActive    DateTime    @default(now())
  createdAt     DateTime    @default(now())
  receptions    Reception[] @relation("CreatedBy")
  updatedReceptions Reception[] @relation("UpdatedBy")
}

model Reception {
  id            String    @id @default(uuid())
  date          String    // Format YYYY-MM-DD
  hour          Int
  minutes       Int
  transporteur  String
  reference     String?
  status        String    // "pending", "confirmed", "delayed", "completed"
  notes         String?
  position      Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  createdBy     User      @relation("CreatedBy", fields: [createdById], references: [id])
  createdById   String
  updatedBy     User?     @relation("UpdatedBy", fields: [updatedById], references: [id])
  updatedById   String?
}